# Application Settings
DEBUG=True
APP_NAME="Pronunciation Practice Portal"
APP_VERSION="1.0.0"

# Database
DATABASE_URL=postgresql://admin:password@localhost:5432/pronunciation_db

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Azure Speech Service (optional - will use mock data if not provided)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_REGION=your_azure_region_here

# File Storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# CORS (add frontend URLs)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
