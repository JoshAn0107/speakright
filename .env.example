AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_REGION=francecentral

# ==========================================
# Application Settings
# ==========================================
DEBUG=True

# ==========================================
# Service Ports (optional, defaults shown)
# ==========================================
FRONTEND_PORT=80
BACKEND_PORT=8000
